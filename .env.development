# ==========================================
# Development Environment Variables
# ==========================================
# Copy this file to .env for local development
# DO NOT commit .env to version control
# ==========================================

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=123456789
DB_NAME=souqsyria

# JWT Configuration
JWT_SECRET=souqsyria_jwt_secret_key_change_this_in_production_2025
JWT_EXPIRATION=7d
# Application Settings
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3006/api

# Logging
LOG_LEVEL=debug
DEBUG=*

# Swagger Documentation
ENABLE_SWAGGER=true

# Email Testing (Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# Google OAuth (placeholders for development - replace with real credentials)
GOOGLE_CLIENT_ID=placeholder-google-client-id
GOOGLE_CLIENT_SECRET=placeholder-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3006/api/auth/google/callback

# Facebook OAuth (placeholders for development - replace with real credentials)
FACEBOOK_APP_ID=placeholder-facebook-app-id
FACEBOOK_APP_SECRET=placeholder-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3006/api/auth/facebook/callback

# Feature Flags
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
