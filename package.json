{
  "name": "souqsyria-platform",
  "version": "1.0.0",
  "description": "SouqSyria - Syrian E-commerce Platform Monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "frontend": "npm run start --workspace=apps/frontend",
    "backend": "npm run start:dev --workspace=apps/backend",
    "frontend:build": "npm run build --workspace=apps/frontend",
    "backend:build": "npm run build --workspace=apps/backend",
    "build": "npm run frontend:build && npm run backend:build",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint -- --fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss,html}\"",
    "type-check": "tsc --noEmit --project apps/backend/tsconfig.json && tsc --noEmit --project apps/frontend/tsconfig.json",
    "prepare": "husky install",
    "postinstall": "rm -rf apps/backend/node_modules/rxjs apps/frontend/node_modules/rxjs; husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^9.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EhssanAtassi/souqsyria-platform.git"
  },
  "author": "Ehssan Atassi",
  "license": "UNLICENSED",
  "dependencies": {
    "@ngrx/effects": "^18.1.1",
    "@ngrx/store": "^18.1.1",
    "@ngrx/store-devtools": "^18.1.1"
  }
}
